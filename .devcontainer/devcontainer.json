{
  "name": "MuleSoft Workshop",
  "image": "mcr.microsoft.com/devcontainers/java:1-17-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installMaven": "true",
      "installGradle": "false"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "salesforce.mule-dx-extension-pack",
        "redhat.java",
        "vscjava.vscode-maven"
      ]
    }
  },
  "postCreateCommand": "mvn -v"
}
