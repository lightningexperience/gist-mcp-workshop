{
  "name": "MuleSoft Workshop",
  "image": "mcr.microsoft.com/devcontainers/java:1-17-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installMaven": "true",
      "installGradle": "false"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "salesforce.mule-dx-extension-pack",
        "redhat.java",
        "vscjava.vscode-maven",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-test"
      ]
    }
  },
  "postCreateCommand": "mvn install:install-file -Dfile=libs/mule-mcp-connector-1.3.0-mule-plugin.jar -DgroupId=com.mulesoft.connectors -DartifactId=mule-mcp-connector -Dversion=1.3.0 -Dpackaging=jar -Dclassifier=mule-plugin && mvn clean package -DskipTests"
}
